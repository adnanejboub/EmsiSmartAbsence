<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/emploi_temps_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jour"
            android:textColor="@color/green1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emploi_temps_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heure"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emploi_temps_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cours"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emploi_temps_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salle"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/emploi_temps_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groupe"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/emploi_temps_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/emploi_temps_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Niveau"
            android:textColor="@color/gray"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>